          ctx.textAlign = "center";
          ctx.textBaseline = "middle";
          ctx.fillText("PUTT!", btnX + btnW / 2, btnY + btnH / 2);
        }
      }

      // Initial draw
      draw();
      // Show preview of the game and start aiming animation while in email state
      showGame(true);
      showAimBanner(false);
      startAiming();
    
  })();
